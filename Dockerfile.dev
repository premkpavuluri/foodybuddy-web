# Development Web Service - expects pre-built Next.js
FROM node:18-alpine

# Install debugging tools
RUN apk add --no-cache netcat-openbsd procps

WORKDIR /app

# Copy pre-built Next.js application
COPY .next/standalone/projects/foody-buddy-app/foodybuddy-web ./
COPY .next/static ./.next/static
COPY public ./public

# Create non-root user
RUN addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 nextjs

# Set permissions
RUN chown -R nextjs:nodejs /app

# Switch to non-root user
USER nextjs

# Expose port
EXPOSE 3000

# Set environment variables
ENV NODE_ENV=development
ENV PORT=3000
ENV HOSTNAME="0.0.0.0"
ENV GATEWAY_BASE_URL=http://foodybuddy-gateway:8080

# Start the application
CMD ["node", "server.js"]